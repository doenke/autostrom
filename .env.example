# Nextcloud WebDAV connection
NC_BASE_URL=https://nextcloud.example.com/remote.php/dav/files/username
NC_USERNAME=nc-user
NC_PASSWORD=nc-password
NC_FILEPATH=Zaehlerstaende/Autostrom.csv
LOCAL_TSV=/app/data/Autostrom.csv

# SMTP settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=mailer@example.com
SMTP_PASSWORD=mailer-password
SMTP_SSL=false
MAIL_FROM=mailer@example.com
MAIL_TO=recipient@example.com,another@example.com

# PDF metadata
PDF_NAME=Max Mustermann
PDF_STREET=Musterstrasse 1
PDF_CITY=12345 Musterstadt

# Paperless-ngx integration (Paperless-IDs required: tags, correspondent, document type)
PAPERLESS_URL=https://paperless.example.com
PAPERLESS_TOKEN=paperless-token
PAPERLESS_TAGS=75,6,5,12
PAPERLESS_CORRESPONDENT=17
PAPERLESS_DOCUMENT_TYPE=30

# OpenID Connect / OAuth
OIDC_ISSUER=https://issuer.example.com
OIDC_CLIENT_ID=client-id
OIDC_CLIENT_SECRET=client-secret
OIDC_SCOPE=openid profile email

# Session signing
SESSION_SECRET=change-me
